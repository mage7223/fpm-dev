{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Listen for XDebug",
        "type": "php",
        "hostname": "0.0.0.0",
        "request": "launch",
        "port": 9000,
        "pathMappings": {
          "/code": "${workspaceFolder}"
        },
        "xdebugSettings": {
          "max_data": 65535,
          "show_hidden": 1,
          "max_children": 100,
          "max_depth": 5
        }
      }
    ]
  }
  